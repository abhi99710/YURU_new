<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recyCheck"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/check_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/recyTitle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Morning"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/recyCheck"
        app:layout_constraintEnd_toStartOf="@+id/recyDate"
        app:layout_constraintStart_toEndOf="@+id/recyCheck"
        app:layout_constraintTop_toTopOf="@+id/recyCheck" />

    <TextView
        android:id="@+id/recyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Thu. 23/09/2021"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/recyContent"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="@dimen/_15sdp"
        android:textColor="#888"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyDate"
        app:layout_constraintStart_toStartOf="@+id/recyCheck"
        app:layout_constraintTop_toBottomOf="@+id/recyTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>